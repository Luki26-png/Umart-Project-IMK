doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet')
    title Payment
  body(onload='startTimer()')
    nav.container-fluid.d-flex.justify-content-center.mt-5
      .w-75.border.bg-primary.rounded-4.px-5.position-relative
        button.btn-close.position-absolute.top-0.end-0.m-2(type='button', aria-label='Close')
        img(src='public/icons/nav_logo.svg', width='150', height='100')
    .container-fluid.d-flex.flex-column.align-items-center.py-3.mb-5
      .w-75
        h3 Rp 28.000
        small.border-top.border-dark Order ID #1234567891098-198764345768
      .w-75.d-flex.flex-column.flex-wrap.align-items-center.justify-content-center.border-bottom.border-1.border-dark.pb-4
        p.text-center.fw-bold
          | Pay within 
          span.timer 24:00:00
        .qr-container.bg-primary.d-flex.flex-column.flex-wrap.justify-content-center.align-items-center.py-3.rounded-4.w-100(id='https://umart-910a5.web.app/?id=123&nominal=60000')
          h3.py-4.fw-bold QRIS
          .qr-code
          p.py-4.fw-bold How to pay?
        button#download-btn.btn.btn-warning.mt-3.w-25 Download QR Code
        button#check-status-button.btn.btn-primary.mt-3.w-25 Check Status
    script(src='public/script/payment.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    script.
      document.getElementById('download-btn').addEventListener('click', () => {
      const img = document.querySelector('#qr-code img');
      if (img && img.src) {
      const a = document.createElement('a');
      a.href = img.src;
      a.download = 'qr-code.png';
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      } else {
      alert('QR code image not found.');
      }
      });
      let totalSeconds = 86400; // 1 hour = 3600 seconds
      let countdown;
      const timerElement = document.querySelectorAll('.timer');
      function formatTime(seconds) {
      const hrs = String(Math.floor(seconds / 3600)).padStart(2, '0');
      const mins = String(Math.floor((seconds % 3600) / 60)).padStart(2, '0');
      const secs = String(seconds % 60).padStart(2, '0');
      return `${hrs}:${mins}:${secs}`;
      }
      function startTimer() {
      clearInterval(countdown); // Reset if already running
      timerElement.forEach((element)=>{
      element.textContent = formatTime(totalSeconds);
      });
      countdown = setInterval(() => {
      totalSeconds--;
      if (totalSeconds < 0) {
      clearInterval(countdown);
      timerElement.forEach((element)=>{
      element.textContent = "00:00:00";
      });
      } else {
      timerElement.forEach((element)=>{
      element.textContent = formatTime(totalSeconds);
      });
      }
      }, 1000);
      }